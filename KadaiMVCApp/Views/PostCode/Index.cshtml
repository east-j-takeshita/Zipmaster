@model ZipViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "郵便番号検索";
    
}
<div class="text-left">
    <h1 class="display-3">検索</h1>

    <form method="post" asp-controller="PostCode" asp-action="Index">@* 送信先のコントローラー名、送信先のアクション指定 *@
        <div class="form-group">
            <label for="postcode">郵便番号</label>
            <input type="text" name="postcode" id="postcode" class="form-control" placeholder=@ViewData["Search"] value=@ViewData["Postcode"] />
            <label for="postcode">都道府県</label>
            <input type="text" name="prefecture" id="prefecture" class="form-control" placeholder=@ViewData["Search"] value=@ViewData["Prefecture"] />
            <label for="postcode">市区町村名</label>
            <input type="text" name="city" id="city" class="form-control" placeholder=@ViewData["Search"] value=@ViewData["City"] />
            <label for="postcode">町域名</label>
            <input type="text" name="shiptoaddress" id="shiptoaddress" class="form-control" placeholder=@ViewData["Search"] value=@ViewData["Postaddress"] />

        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="送信"/>
        </div>
    </form>

    <table class="table">
        <tr>
            <th>郵便番号</th>
            <th>都道府県名</th>
            <th>市区町村名</th>
            <th>町域名</th>
            <th>詳細リンク</th>

        </tr>
        @if(Model.ZipsData!=null)
        {
            
            @foreach(var zip in Model.ZipsData)
            {
                <tr>
                    <td>@zip.PostCode</td>
                    <td>@zip.Prefecture</td>
                    <td>@zip.City</td>
                    <td>@zip.ShipToAddress</td>
                    <td><a href="@Url.Action("PostCodeDetail", "PostCode", new { ID= zip.PostOrderID })">詳細はこちら</a></td>
                </tr>
            }
            
        }
        else
        {
            @ViewData["SearchMessage"];
        }  
        
    </table>
</div>
<button type="submit" class="btn btn-primary" onclick="location.href ='Create'" value="遷移" />新規追加
